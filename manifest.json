{
  "manifest_version": 3,
  "name": "币安Alpha自动买入助手",
  "version": "1.9.5",
  "description": "币安Alpha交易页面自动买入策略执行工具",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.binance.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.binance.com/zh-CN/alpha/*/*"],
      "js": ["trend.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.binance.com/*/my/orders/alpha/orderhistory*",
        "https://www.binance.com/my/orders/alpha/orderhistory*"
      ],
      "js": ["order-history.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "币安Alpha自动买入"
  },
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "pageHook.js"],
      "matches": ["https://www.binance.com/*"]
    }
  ]
}
